{
  "name": "beacon",
  "version": "0.0.0-development",
  "description": "A toy project to demonstrate things I learned building [Check Run Reporter](https://www.check-run-reporter.com)",
  "scripts": {
    "eslint": "eslint ${ESLINT_FORMAT_OPTIONS:-} --ignore-path .gitignore ",
    "lint": "npm-run-all --continue-on-error --parallel lint:*",
    "lint:changelog": "commitlint --from origin/main --to HEAD",
    "lint:es": "npm run --silent eslint -- .",
    "prelint:types": "mkdir --parents reports/style",
    "lint:types": "bash -c \"tsc $TSC_OPTIONS\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16.x",
    "npm": "8.x"
  },
  "keywords": [],
  "author": "Ian Remmel <1182361+ianwremmel@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@ianwremmel/eslint-plugin-ianwremmel": "^6.2.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^16.11.47",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-workspaces": "^0.7.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.js": "npm run eslint -- ",
    "*.jsx": "npm run eslint -- ",
    "*.ts": "npm run eslint -- ",
    "*.tsx": "npm run eslint -- ",
    "bin/**": "npm run eslint -- "
  },
  "workspaces": [
    "packages/*/*"
  ],
  "private": true
}
